# HOE Parser Environment Configuration

# Application Settings
HOST=localhost
PORT=8080
LOG_LEVEL=info
DEBUG=false

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CONSUMER_GROUP=hoe_parser_group
KAFKA_TOPICS_EVENTS=events
KAFKA_TOPICS_ERRORS=errors
KAFKA_TOPICS_METRICS=metrics

# ClickHouse Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_DATABASE=hoe_parser
CLICKHOUSE_USER=admin
CLICKHOUSE_PASSWORD=password
CLICKHOUSE_MAX_CONNECTIONS=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redispassword
REDIS_DB=0

# Monitoring and Metrics
ENABLE_METRICS=true
ENABLE_TRACING=false
METRICS_PORT=9090

# Parser Configuration
PARSER_MAX_INPUT_SIZE=1048576
PARSER_TIMEOUT=60s
PARSER_WORKERS=4

# Security
JWT_SECRET=your-super-secret-jwt-key
API_KEY=your-api-key-here

# Development Settings
HOT_RELOAD=false
ENABLE_PROFILING=false 